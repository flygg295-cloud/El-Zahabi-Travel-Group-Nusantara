// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  name      String?
  password  String?    // For email/password login approach
  image     String?
  phone     String?
  address   String?
  city      String?
  country   String?
  zipCode   String?
  
  // OAuth
  provider  String?
  providerAccountId String?
  
  // Relations
  bookings  Booking[]
  accounts  Account[]
  sessions  Session[]
  
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Ticket {
  id           String     @id @default(cuid())
  type         String     // "flight" or "hotel"
  
  // Flight specific
  airline      String?
  flightNumber String?
  from         String?    // Departure city/airport
  to           String?    // Destination city/airport
  departTime   DateTime?
  arriveTime   DateTime?
  duration     String?    // e.g. "2h 30m"
  stops        Int        @default(0)
  
  // Hotel specific
  hotelName    String?
  address      String?
  checkInDate  DateTime?
  checkOutDate DateTime?
  roomType     String?
  
  // Common fields
  price        Float
  currency     String     @default("IDR")
  totalSeats   Int        @default(1)
  availableSeats Int?
  image        String?    // URL to flight/hotel image
  description  String?    @db.Text
  amenities    String[]   // JSON array of amenities
  rating       Float      @default(0)
  reviews      Int        @default(0)
  
  // Relations
  bookings     Booking[]
  
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@index([type])
  @@index([departTime])
  @@index([from, to])
}

model Booking {
  id                String     @id @default(cuid())
  bookingCode       String     @unique @default(cuid())
  
  userId            String
  user              User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  ticketId          String
  ticket            Ticket     @relation(fields: [ticketId], references: [id])
  
  // Passenger/Guest info
  passengerName     String
  passengerEmail    String
  passengerPhone    String
  passengerIdType   String?    // e.g., "passport", "ktp"
  passengerIdNumber String?
  
  // Booking details
  quantity          Int        @default(1)
  specialRequests   String?    @db.Text
  
  // Pricing
  subtotal          Float
  tax               Float      @default(0)
  discount          Float      @default(0)
  totalPrice        Float
  currency          String     @default("IDR")
  
  // Payment
  paymentStatus     String     @default("PENDING")     // PENDING, COMPLETED, FAILED, REFUNDED
  paymentMethod     String?    // midtrans, stripe, bank_transfer
  paymentId         String?    // transaction ID from payment gateway
  paidAt            DateTime?
  
  // Booking status
  status            String     @default("PENDING")     // PENDING, CONFIRMED, CANCELLED, COMPLETED
  notes             String?    @db.Text
  
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt

  @@index([userId])
  @@index([ticketId])
  @@index([bookingCode])
  @@index([status])
  @@index([paymentStatus])
}
